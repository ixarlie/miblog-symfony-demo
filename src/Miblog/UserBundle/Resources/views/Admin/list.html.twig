{% extends "AdminBundle::layout_admin.html.twig" %}


{% block gestion %}
<div class="btn-group">
    <a href="{{ path('admin_article_new') }}"><button class="btn btn-primary">Nuevo</button></a>
</div>
{% endblock %}

{% block contenido %}

<table class="table table-striped table-bordered">
<thead>
<tr>
<th>#</th>
<th>Admin</th>
<th>Username</th>
<th>Email</th>
<th>Articulos</th>
<th><i class="icon-trash"></i></th>
</tr>
</thead>
<tbody>
{% for u in result %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{% if u.hasRole('ROLE_ADMIN') %}
                <i class="icon-star"></i>
                {% endif %}
            </td>
            <td><a href="{{ path('admin_user_edit', {'slug': u.usernameCanonical }) }}">{{ u.username }}</a></td>
            <td>{{ u.email }}</td>
            <td>{{ u.articles | length }}</td>
            <td><a class="btn btn-danger" href="#"><i class="icon-trash icon-white"></i></a></td>
        </tr>
{% else %}
    <div class="alert alert-error">
        <span>No hay usuarios</span>
    </div>
{% endfor %}
    </tbody>
</table>

{% endblock %}