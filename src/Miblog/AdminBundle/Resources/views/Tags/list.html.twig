{% extends "AdminBundle::layout_admin.html.twig" %}


{% block gestion %}
<div class="btn-group">
    <a href="{{ path('admin_article_new') }}"><button class="btn btn-primary">Nuevo</button></a>
</div>
{% endblock %}

{% block contenido %}

<table class="table table-striped table-bordered">
<thead>
<tr>
<th>#</th>
<th>Etiqueta</th>
<th>Articulos</th>
<th><i class="icon-trash"></i></th>
</tr>
</thead>
<tbody>
{% for t in result %}
        <tr>
            <td>{{ loop.index }}</td>
            <td><a href="{{ path('admin_tag_edit', {'slug': t.label }) }}">{{ t.label }}</a></td>
            <td>{{ t.articles | length }}</td>
            <td><a class="btn btn-danger" href="#"><i class="icon-trash icon-white"></i></a></td>
        </tr>
{% else %}
    <div class="alert alert-error">
        <span>Aún no se ha creado ningúna etiqueta.</span>
    </div>
{% endfor %}
    </tbody>
</table>

{% endblock %}