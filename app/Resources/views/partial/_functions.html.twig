{% macro flash_alerts(type) %}    
    {% set flashes = app.session.getFlashes() %}
    {% if flashes|length > 0 %}
        <div class="alert alert-{{ type }} fade in">
            <a class="close" data-dismiss="alert">Ã—</a>
            {% for key, flash in flashes %}
                {{ flash|trans({})|raw }}<br />
            {% endfor %}
        </div>
    {% endif %}        
{% endmacro flash_alerts %}